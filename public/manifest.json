{
  "manifest_version": 3,

  "name": "Focusmate helper",
  "description": "Not just an alarm for focusmate!",
  "version": "6.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "128": "favicon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.focusmate.com/*"],
      "js": ["background.js"]
    }
  ],
  "permissions": ["storage"]
}
