{
  "manifest_version": 3,

  "name": "Focusalarm",
  "description": "An Alarm for Focusmate.com: Before the session starts and ends, different options of times and sounds",
  "version": "5.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "128": "bell-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.focusmate.com/", "https://yrnj3.csb.app/"],
      "js": ["background.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["bleat.mp3", "chirp.mp3", "bell.mp3"],
      "matches": ["https://www.focusmate.com/*", "https://yrnj3.csb.app/*"]
    }
  ],
  "permissions": ["tabs", "storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.focusmate.com/", "https://yrnj3.csb.app/"]
}
